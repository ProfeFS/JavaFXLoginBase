<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" prefHeight="196.0" prefWidth="274.0" spacing="10" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1">
    <children>
        <HBox alignment="CENTER" spacing="10">
            <children>
                <Label text="Username:" />
                <TextField fx:id="txtUsername" />
            </children>
        </HBox>
        
        <HBox alignment="CENTER" spacing="10">
            <children>
                <Label text="Password:" />
                <PasswordField fx:id="txtPassword" />
            </children>
        </HBox>

        <HBox alignment="CENTER" prefHeight="57.0" prefWidth="41.0" spacing="10">
            <children>
                <Button fx:id="btnLogin" text="Login" />
                <Button fx:id="btnCancel" text="Cancel" />
            </children>
        </HBox>
    </children>
   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
   </padding>
</VBox>
